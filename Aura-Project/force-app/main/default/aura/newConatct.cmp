<aura:component controller="newContactController">
    <aura:attribute name="savedContact" type="Contact" />
    <aura:attribute name="result" type="Boolean" />
    <aura:attribute name="newContact" type="Contact" default="{ 'sobjectType': 'Contact',
                                                                'FirstName': '',
                                                                'LastName': '',
                                                                'Email': '',
                                                                'Phone': '',
                                                                'Fax': ''}" />

    <!-- PAGE HEADER -->
    <lightning:layout class="slds-page-header slds-page-header--object-home">
        <lightning:layoutItem>
            <lightning:icon iconName="standard:contact" alternativeText="Contact Form" />
        </lightning:layoutItem>
        <lightning:layoutItem padding="horizontal-small">
            <div class="page-section page-header">
                <h1 class="slds-text-heading--label">Contacts</h1>
                <h2 class="slds-text-heading--medium">Create Contact</h2>
            </div>
        </lightning:layoutItem>
    </lightning:layout>
    <!-- /PAGE HEADER -->

    <!-- CREATE NEW Contact FORM -->
    <div aria-labelledby="newcontactform">
        <fieldset class="slds-box slds-theme--default slds-container--small">
            <form class="slds-form--stacked">
                <lightning:input aura:id="contactform" label="First Name" name="contactfname" value="{!v.newContact.FirstName}" />
                <lightning:input aura:id="contactform" label="Last Name" name="contactlname" value="{!v.newContact.LastName}" required="true" />
                <lightning:input aura:id="contactform" label="Email" name="contactemail" type="email" value="{!v.newContact.Email}" />
                <lightning:input aura:id="contactform" label="Phone" name="contactphone" type="tel" value="{!v.newContact.Phone}" pattern="[0-9]{10}" messageWhenPatternMismatch="You have entered invalid phone!" />
                <lightning:input aura:id="contactform" label="Fax" name="contactfax" type="tel" value="{!v.newContact.Fax}" pattern="[0-9]{1,3}-[0-9]{3}-[0-9]{7}" messageWhenPatternMismatch="You have entered invalid fax!" />
                <lightning:button label="Create Contact" class="slds-m-top--medium" variant="brand" onclick="{!c.createContact}" />
            </form>
        </fieldset>
    </div>
    <!-- /CREATE NEW Contact FORM -->

    <aura:if isTrue="{!v.result}">
        <ui:message title="Contact Saved" severity="confirm" closable="true">
            <c:savedContact contact="{!v.savedContact}" />
        </ui:message>
    </aura:if>
    <aura:if isTrue="{!(v.result == false)}">
        <ui:message title="Error" severity="error" closable="true">
            Could not save contact..!
        </ui:message>
    </aura:if>
</aura:component>